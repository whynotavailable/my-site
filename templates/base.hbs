  <script>
    function setColors() {
      if (localStorage.getItem("color") === "dark") {
        document.documentElement.style.setProperty("--on-color", "#edf2f4");
        document.documentElement.style.setProperty("--background-color", "#2b2d42");
        document.documentElement.style.setProperty("--primary-on-color", "#8d99ae");
      }
      else {
        document.documentElement.style.setProperty("--on-color", "black");
        document.documentElement.style.setProperty("--background-color", "#FEFAE0");
        document.documentElement.style.setProperty("--primary-on-color", "#283618");
      }
    }

    function flipColors() {
      if (localStorage.getItem("color") === "dark") {
        localStorage.setItem("color", "light");
      }
      else {
        localStorage.setItem("color", "dark");
      }

      setColors();
    }

    setColors();
  </script> 
